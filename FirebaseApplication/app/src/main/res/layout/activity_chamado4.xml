<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chamados4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context="br.com.fireapp.firebaseapplication.ChamadoActivity4">


    <TextView
        android:text="@string/text_chamado4_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp"/>

    <View
        android:layout_width="match_parent"
        android:background="#000000"
        android:layout_height="1dp"
        android:layout_marginBottom="26dp"/>

    <TextView
        android:text="@string/text_chamado4_descricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/id_radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fraca"
            android:textColor="#000000"
            android:buttonTint="#000000"
            android:layout_marginBottom="8dp"/>

        <RadioButton
            android:id="@+id/id_radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Normal"
            android:textColor="#000000"
            android:buttonTint="#000000"
            android:layout_marginBottom="8dp"/>

        <RadioButton android:id="@+id/id_radio3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NÃ£o respira"
            android:textColor="#000000"
            android:buttonTint="#000000"
            android:layout_marginBottom="8dp"/>

    </RadioGroup>

    <Button
        android:text="Finalizar"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:background="@drawable/custom_button_blue"
        android:id="@+id/proximo"
        android:layout_marginTop="8dp" />

</LinearLayout>
