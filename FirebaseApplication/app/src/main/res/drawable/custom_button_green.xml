<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="2dip" android:color="#81C784" />
            <gradient android:angle="-90" android:startColor="#66BB6A" android:endColor="#66BB6A"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="2dip" android:color="#81C784" />
            <solid android:color="#66BB6A"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="2dip" android:color="#81C784" />
            <gradient android:angle="-90" android:startColor="#4CAF50" android:endColor="#4CAF50" />
        </shape>
    </item>
</selector>